<!doctype html>
<html>
	{% include 'head.twig' %}
	<body>
		<div id="page">
			{% set selected = "planets" %}
			{% include 'navigation.twig' with selected %}
			<div id="body">
				<div class="header">
					<div>
					    {% if hint %}
					        <h2>{{hint}}</h2>
						{% endif %}
						{% if objects %}
						    <h1>{{category}}</h1>
							<ul>
								{% for item in objects %}
								<li>
									{% if item.image %}
										<a href="/moons/{{item.title}}"><img class="spaceimg" src="/uploades/{{item.image}}" alt="{{item.title}}"></a>
									{% else %}
										<a href="/moons/{{item.title}}"><img class="spaceimg" src="/uploades/noimage.png" alt="{{item.title}}"></a>
									{% endif %}
									<div>
										<h1>{{item.title}}</h1>
										<p>{{item.description}}</p>
										{% if category == "planets" %}
										<a href="/planets/{{item.title}}" class="more">Read More</a>
										{% else %}
										<a href="/moons/{{item.title}}" class="more">Read More</a>
										{% endif %}
									</div>
								</li>
								{% endfor %}
							</ul>

							{% if openPager %}
								<div class="paginator">
									<div class="allpages">
										<a href="/{{category}}/page/1">First page</a>
										{% set n = pages %}
										{% for i in range(1, n) %}
											{% if loop.index == activePage %}
												<a class="active" href="/{{category}}/page/{{i}}">{{i}}</a>
											{% else %}
												<a href="/{{category}}/page/{{i}}">{{i}}</a>
											{% endif %}
										{% endfor %}
										<a href="/{{category}}/page/{{pages}}">Last page</a>
									</div>
								</div>
							{% endif %}

						{% endif %}
					</div>
				</div>
			</div>
			{% include 'footer.twig' %}
		</div>
	</body>
</html>
